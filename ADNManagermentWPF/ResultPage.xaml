<Page x:Class="ADNManagermentWPF.ResultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ADNManagermentWPF"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="800"
      Title="ResultPage">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Test Results" FontSize="22" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Search Panel -->
        <Border Grid.Row="1" BorderBrush="#dee2e6" BorderThickness="1" Background="White" Margin="0,0,0,15" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Search by Booking ID:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Column="1" x:Name="txtSearchBookingId" Height="30" Padding="5"/>
                <Button Grid.Column="2" x:Name="btnSearch" Content="Search" Margin="10,0,0,0" Padding="10,5" Background="#3498db" Foreground="White" Click="btnSearch_Click"/>
                <Button Grid.Column="3" x:Name="btnViewAll" Content="View All Results" HorizontalAlignment="Right" Padding="10,5" Background="#6c757d" Foreground="White" Click="btnViewAll_Click"/>
            </Grid>
        </Border>

        <!-- Results List -->
        <Border Grid.Row="2" BorderBrush="#dee2e6" BorderThickness="1" Background="White" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Test Results" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                <DataGrid Grid.Row="1" x:Name="dgResults" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,10" BorderThickness="1" BorderBrush="#dee2e6">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Result ID" Binding="{Binding ResultId}" Width="80"/>
                        <DataGridTextColumn Header="Booking ID" Binding="{Binding BookingId}" Width="100"/>
                        <DataGridTextColumn Header="Result Details" Binding="{Binding ResultDetails}" Width="300"/>
                        <DataGridTextColumn Header="Result Date" Binding="{Binding ResultDate}" Width="120"/>
                        <DataGridTextColumn Header="Staff ID" Binding="{Binding StaffId}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnSendFeedback" Content="Send Feedback" Margin="0,0,10,0" Padding="10,5" Background="#28a745" Foreground="White" Click="btnSendFeedback_Click"/>
                    <Button x:Name="btnViewDetails" Content="View Details" Padding="10,5" Background="#3498db" Foreground="White" Click="btnViewDetails_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page> 