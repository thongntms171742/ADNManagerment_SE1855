<Window x:Class="ADNManagermentWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADNManagermentWPF"
        mc:Ignorable="d"
        Title="Login - ADN Management System" Height="418" Width="400"
        WindowStartupLocation="CenterScreen">
    <Border Background="#f8f9fa" Padding="20" Margin="0,0,0,52">
        <StackPanel>
            <TextBlock Text="ADN MANAGEMENT SYSTEM" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>
            
            <TextBlock Text="Email:" Margin="0,10,0,5"/>
            <TextBox x:Name="txtEmail" Height="30" Padding="5"/>
            
            <TextBlock Text="Password:" Margin="0,10,0,5"/>
            <PasswordBox x:Name="txtPassword" Height="30" Padding="5"/>
            
            <Button x:Name="btnLogin" Content="Login" Height="35" Margin="0,30,0,0" Background="#3498db" Foreground="White" Click="btnLogin_Click"/>
            <Button x:Name="btnRegister" Content="Register" Height="35" Margin="0,10,0,0" Background="#28a745" Foreground="White" Click="btnRegister_Click"/>
        </StackPanel>
    </Border>
</Window> 