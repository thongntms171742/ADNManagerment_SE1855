<Window x:Class="ADNManagermentWPF.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Management" Height="700" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" x:Name="txtHeader" Text="Add New User" 
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Full Name -->
                <TextBlock Text="Full Name *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtFullName" Margin="0,0,0,15" Padding="8"/>

                <!-- Email -->
                <TextBlock Text="Email *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail" Margin="0,0,0,15" Padding="8"/>

                <!-- Password -->
                <TextBlock Text="Password *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword" Margin="0,0,0,15" Padding="8"/>

                <!-- Phone Number -->
                <TextBlock Text="Phone Number" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtPhoneNumber" Margin="0,0,0,15" Padding="8"/>

                <!-- Address -->
                <TextBlock Text="Address" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtAddress" Margin="0,0,0,15" Padding="8" Height="60" 
                         TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

                <!-- Date of Birth -->
                <TextBlock Text="Date of Birth" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <DatePicker x:Name="dpDateOfBirth" Margin="0,0,0,15"/>

                <!-- Role -->
                <TextBlock Text="Role *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox x:Name="cboRole" Margin="0,0,0,15" Padding="8">
                    <ComboBoxItem Content="Customer" Tag="1"/>
                    <ComboBoxItem Content="Staff" Tag="2"/>
                    <ComboBoxItem Content="Manager" Tag="3"/>
                    <ComboBoxItem Content="Admin" Tag="4"/>
                </ComboBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,20,0,0">
            <Button x:Name="btnSave" Content="Save" Width="80" Height="35" Margin="0,0,10,0" 
                    Background="#28a745" Foreground="White" Click="btnSave_Click"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="80" Height="35" 
                    Background="#6c757d" Foreground="White" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window> 