<Page x:Class="ADNManagermentWPF.BookingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ADNManagermentWPF"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="800"
      Title="BookingPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="15">
            <!-- Header -->
            <TextBlock Text="DNA Testing Service Booking" FontSize="22" FontWeight="Bold" Margin="0,0,0,15"/>

            <!-- Booking Form -->
            <Border BorderBrush="#dee2e6" BorderThickness="1" Background="White" Margin="0,0,0,15" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Service:" Margin="0,5,10,5" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" x:Name="cboServices" Margin="0,5,0,5" Height="30"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Booking Date:" Margin="0,5,10,5" VerticalAlignment="Center"/>
                    <DatePicker Grid.Row="1" Grid.Column="1" x:Name="dpBookingDate" Margin="0,5,0,5" Height="30"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Collection Method:" Margin="0,5,10,5" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="2" Grid.Column="1" x:Name="cboCollectionMethod" Margin="0,5,0,5" Height="30"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Address (for home collection):" Margin="0,5,10,5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtAddress" Margin="0,5,0,5" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

                    <Button Grid.Row="4" Grid.Column="1" x:Name="btnBook" Content="Book Service" Margin="0,15,0,0" Padding="10,5" Background="#28a745" Foreground="White" HorizontalAlignment="Right" Click="btnBook_Click"/>
                </Grid>
            </Border>

            <!-- Bookings List -->
            <Border BorderBrush="#dee2e6" BorderThickness="1" Background="White" Padding="15" MinHeight="300">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="My Bookings" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <DataGrid Grid.Row="1" x:Name="dgBookings" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,10" BorderThickness="1" BorderBrush="#dee2e6" MinHeight="200">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding BookingId}" Width="50"/>
                            <DataGridTextColumn Header="Service" Binding="{Binding Service.ServiceName}" Width="200"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding BookingDate, StringFormat=\{0:dd/MM/yyyy\}}" Width="100"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                            <DataGridTextColumn Header="Collection Method" Binding="{Binding CollectionMethod}" Width="150"/>
                            <DataGridTextColumn Header="Created Date" Binding="{Binding CreatedDate, StringFormat=\{0:dd/MM/yyyy\}}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Grid.Row="2" x:Name="btnViewDetails" Content="View Details" HorizontalAlignment="Right" Padding="10,5" Background="#3498db" Foreground="White" Click="btnViewDetails_Click"/>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page> 