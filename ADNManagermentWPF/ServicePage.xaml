<Page x:Class="ADNManagermentWPF.ServicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ADNManagermentWPF"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="ServicePage">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Service Management" FontSize="22" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Action Panel -->
        <Border Grid.Row="1" BorderBrush="#dee2e6" BorderThickness="1" Background="White" Margin="0,0,0,15" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left side - CRUD buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="btnAddService" Content="Add New Service" Margin="0,0,10,0" Padding="15,8" Background="#28a745" Foreground="White" Click="btnAddService_Click"/>
                    <Button x:Name="btnEditService" Content="Edit Service" Margin="0,0,10,0" Padding="15,8" Background="#3498db" Foreground="White" Click="btnEditService_Click"/>
                    <Button x:Name="btnDeleteService" Content="Delete Service" Margin="0,0,10,0" Padding="15,8" Background="#dc3545" Foreground="White" Click="btnDeleteService_Click"/>
                </StackPanel>
                
                <!-- Right side - Refresh button -->
                <Button Grid.Column="1" x:Name="btnRefresh" Content="Refresh" Padding="15,8" Background="#6c757d" Foreground="White" Click="btnRefresh_Click"/>
            </Grid>
        </Border>

        <!-- Services List -->
        <Border Grid.Row="2" BorderBrush="#dee2e6" BorderThickness="1" Background="White" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Services List" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                <DataGrid Grid.Row="1" x:Name="dgServices" AutoGenerateColumns="False" IsReadOnly="True" BorderThickness="1" BorderBrush="#dee2e6">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ServiceId}" Width="60"/>
                        <DataGridTextColumn Header="Service Name" Binding="{Binding ServiceName}" Width="200"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="300"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C}" Width="100"/>
                        <DataGridTextColumn Header="Created Date" Binding="{Binding CreatedDate, StringFormat=dd/MM/yyyy}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Page> 