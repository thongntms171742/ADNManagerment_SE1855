<Page x:Class="ADNManagermentWPF.ResultManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ADNManagermentWPF"
      mc:Ignorable="d" 
      d:DesignHeight="820" d:DesignWidth="800"
      Title="ResultManagementPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="15">
            <!-- Header -->
            <TextBlock Text="Result Management" FontSize="22" FontWeight="Bold" Margin="0,0,0,15"/>

            <!-- Search Section -->
            <Border BorderBrush="#dee2e6" BorderThickness="1" Background="White" Margin="0,0,0,15" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Search by Booking ID:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Grid.Column="1" x:Name="txtSearchBookingId" Height="30" Margin="0,0,10,0"/>
                    <Button Grid.Column="2" x:Name="btnSearch" Content="Search" Padding="10,5" Background="#3498db" Foreground="White" Click="btnSearch_Click"/>
                </Grid>
            </Border>

            <!-- Pending Results -->
            <Border BorderBrush="#dee2e6" BorderThickness="1" Background="White" Padding="15" Margin="0,0,0,15" MinHeight="300">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Pending Results" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <DataGrid Grid.Row="1" x:Name="dgPendingResults" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,10" BorderThickness="1" BorderBrush="#dee2e6" MinHeight="200">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Booking ID" Binding="{Binding BookingId}" Width="100"/>
                            <DataGridTextColumn Header="Customer" Binding="{Binding Customer.FullName}" Width="150"/>
                            <DataGridTextColumn Header="Service" Binding="{Binding Service.ServiceName}" Width="200"/>
                            <DataGridTextColumn Header="Booking Date" Binding="{Binding BookingDate, StringFormat=\{0:dd/MM/yyyy\}}" Width="120"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Grid.Row="2" x:Name="btnAddResult" Content="Add Result" HorizontalAlignment="Right" Padding="10,5" Background="#28a745" Foreground="White" Click="btnAddResult_Click"/>
                </Grid>
            </Border>

            <!-- All Results -->
            <Border BorderBrush="#dee2e6" BorderThickness="1" Background="White" Padding="15" MinHeight="300">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="All Results" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <DataGrid Grid.Row="1" x:Name="dgAllResults" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,10" BorderThickness="1" BorderBrush="#dee2e6" MinHeight="200">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Result ID" Binding="{Binding ResultId}" Width="80"/>
                            <DataGridTextColumn Header="Booking ID" Binding="{Binding BookingId}" Width="100"/>
                            <DataGridTextColumn Header="Customer" Binding="{Binding Booking.Customer.FullName}" Width="150"/>
                            <DataGridTextColumn Header="Service" Binding="{Binding Booking.Service.ServiceName}" Width="200"/>
                            <DataGridTextColumn Header="Result Date" Binding="{Binding ResultDate, StringFormat=\{0:dd/MM/yyyy\}}" Width="120"/>
                            <DataGridTextColumn Header="Staff" Binding="{Binding Staff.FullName}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Left side - CRUD buttons -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Button x:Name="btnEditResult" Content="Edit Result" Margin="0,0,10,0" Padding="10,5" Background="#ffc107" Foreground="Black" Click="btnEditResult_Click"/>
                            <Button x:Name="btnViewResult" Content="View Details" Padding="10,5" Background="#3498db" Foreground="White" Click="btnViewResult_Click"/>
                        </StackPanel>
                        
                        <!-- Right side - Empty for now -->
                    </Grid>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page> 