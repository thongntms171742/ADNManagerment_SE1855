<Window x:Class="ADNManagermentWPF.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Result Management" Height="650" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Border Background="#f8f9fa" Padding="20">
        <StackPanel>
            <TextBlock x:Name="txtTitle" Text="Add Test Result" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            
            <!-- Booking Information -->
            <Border BorderBrush="#dee2e6" BorderThickness="1" Background="White" Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Booking Information" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Booking ID:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtBookingId" Text="0" Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Customer:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtCustomer" Text="" Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Service:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtService" Text="" Margin="0,0,0,5"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Result Information -->
            <Border BorderBrush="#dee2e6" BorderThickness="1" Background="White" Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Result Information" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Result Date:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <DatePicker x:Name="dpResultDate" Height="30" Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Result Details:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtResultDetails" Height="100" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Test Status:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cboTestStatus" Height="30" Margin="0,0,0,15">
                        <ComboBoxItem Content="Completed"/>
                        <ComboBoxItem Content="In Progress"/>
                        <ComboBoxItem Content="Failed"/>
                    </ComboBox>
                </StackPanel>
            </Border>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnSave" Content="Save Result" Width="100" Height="35" Background="#28a745" Foreground="White" Margin="0,0,10,0" Click="btnSave_Click"/>
                <Button x:Name="btnCancel" Content="Cancel" Width="100" Height="35" Background="#6c757d" Foreground="White" Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window> 