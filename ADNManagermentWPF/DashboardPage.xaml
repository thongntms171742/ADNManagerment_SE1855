<Page x:Class="ADNManagermentWPF.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ADNManagermentWPF"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="800"
      Title="DashboardPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="15">
            <!-- Header -->
            <TextBlock Text="Dashboard and Reports" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="#2c3e50"/>

            <!-- Statistics Cards -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Bookings -->
                <Border Grid.Column="0" Background="White" Margin="5" Padding="15" CornerRadius="8" BorderBrush="#e9ecef" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Total Bookings" FontSize="12" Foreground="#6c757d" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtTotalBookings" Text="0" FontSize="24" FontWeight="Bold" Foreground="#3498db" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Completed Tests -->
                <Border Grid.Column="1" Background="White" Margin="5" Padding="15" CornerRadius="8" BorderBrush="#e9ecef" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Completed Tests" FontSize="12" Foreground="#6c757d" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtCompletedTests" Text="0" FontSize="24" FontWeight="Bold" Foreground="#28a745" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Pending Results -->
                <Border Grid.Column="2" Background="White" Margin="5" Padding="15" CornerRadius="8" BorderBrush="#e9ecef" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Pending Results" FontSize="12" Foreground="#6c757d" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtPendingResults" Text="0" FontSize="24" FontWeight="Bold" Foreground="#ffc107" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Total Revenue -->
                <Border Grid.Column="3" Background="White" Margin="5" Padding="15" CornerRadius="8" BorderBrush="#e9ecef" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Total Revenue" FontSize="12" Foreground="#6c757d" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtTotalRevenue" Text="$0" FontSize="24" FontWeight="Bold" Foreground="#e74c3c" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Charts Section -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Monthly Bookings Chart -->
                <Border Grid.Column="0" Background="White" Margin="5" Padding="15" CornerRadius="8" BorderBrush="#e9ecef" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Monthly Bookings" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15" Foreground="#2c3e50"/>
                        <Canvas x:Name="monthlyChart" Height="200" Background="#f8f9fa"/>
                    </StackPanel>
                </Border>

                <!-- Service Distribution -->
                <Border Grid.Column="1" Background="White" Margin="5" Padding="15" CornerRadius="8" BorderBrush="#e9ecef" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Service Distribution" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15" Foreground="#2c3e50"/>
                        <ListView x:Name="serviceDistributionList" Height="200" Background="Transparent" BorderThickness="0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Recent Activities and Feedback -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Recent Activities -->
                <Border Grid.Column="0" Background="White" Margin="5" Padding="15" CornerRadius="8" BorderBrush="#e9ecef" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Recent Activities" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15" Foreground="#2c3e50"/>
                        <ListView x:Name="recentActivitiesList" Height="200" Background="Transparent" BorderThickness="0"/>
                    </StackPanel>
                </Border>

                <!-- Customer Feedback -->
                <Border Grid.Column="1" Background="White" Margin="5" Padding="15" CornerRadius="8" BorderBrush="#e9ecef" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Customer Feedback" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15" Foreground="#2c3e50"/>
                        <ListView x:Name="feedbackList" Height="200" Background="Transparent" BorderThickness="0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page> 