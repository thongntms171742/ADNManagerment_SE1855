<Window x:Class="ADNManagermentWPF.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADNManagermentWPF"
        mc:Ignorable="d"
        Title="Register - ADN Management System" Height="700" Width="450"
        WindowStartupLocation="CenterScreen">
    <Border Background="#f8f9fa" Padding="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="REGISTER ACCOUNT" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                
                <TextBlock Text="Full Name:" Margin="0,10,0,5"/>
                <TextBox x:Name="txtFullName" Height="30" Padding="5"/>
                
                <TextBlock Text="Email:" Margin="0,10,0,5"/>
                <TextBox x:Name="txtEmail" Height="30" Padding="5"/>
                
                <TextBlock Text="Password:" Margin="0,10,0,5"/>
                <PasswordBox x:Name="txtPassword" Height="30" Padding="5"/>
                
                <TextBlock Text="Confirm Password:" Margin="0,10,0,5"/>
                <PasswordBox x:Name="txtConfirmPassword" Height="30" Padding="5"/>
                
                <TextBlock Text="Phone Number:" Margin="0,10,0,5"/>
                <TextBox x:Name="txtPhone" Height="30" Padding="5"/>
                
                <TextBlock Text="Address:" Margin="0,10,0,5"/>
                <TextBox x:Name="txtAddress" Height="60" Padding="5" TextWrapping="Wrap" AcceptsReturn="True"/>
                
                <TextBlock Text="Date of Birth:" Margin="0,10,0,5"/>
                <DatePicker x:Name="dpDateOfBirth" Height="30" Padding="5"/>
                
                <Button x:Name="btnRegister" Content="Register" Height="35" Margin="0,30,0,0" Background="#28a745" Foreground="White" Click="btnRegister_Click"/>
                <Button x:Name="btnBack" Content="Back to Login" Height="35" Margin="0,10,0,0" Background="#6c757d" Foreground="White" Click="btnBack_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window> 