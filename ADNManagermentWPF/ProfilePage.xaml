<Page x:Class="ADNManagermentWPF.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ADNManagermentWPF"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="ProfilePage">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="My Profile" FontSize="22" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Profile Information -->
        <Border Grid.Row="1" BorderBrush="#dee2e6" BorderThickness="1" Background="White" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Full Name:" FontWeight="SemiBold" Margin="0,5"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtFullName" Height="30" Padding="5" Margin="0,5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Email:" FontWeight="SemiBold" Margin="0,5"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtEmail" Height="30" Padding="5" Margin="0,5" IsReadOnly="True"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Phone Number:" FontWeight="SemiBold" Margin="0,5"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtPhone" Height="30" Padding="5" Margin="0,5"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Address:" FontWeight="SemiBold" Margin="0,5"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtAddress" Height="60" Padding="5" Margin="0,5" TextWrapping="Wrap" AcceptsReturn="True"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Date of Birth:" FontWeight="SemiBold" Margin="0,5"/>
                <DatePicker Grid.Row="4" Grid.Column="1" x:Name="dpDateOfBirth" Height="30" Padding="5" Margin="0,5"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="Role:" FontWeight="SemiBold" Margin="0,5"/>
                <TextBlock Grid.Row="5" Grid.Column="1" x:Name="txtRole" Height="30" Padding="5" Margin="0,5" VerticalAlignment="Center"/>

                <TextBlock Grid.Row="6" Grid.Column="0" Text="Created Date:" FontWeight="SemiBold" Margin="0,5"/>
                <TextBlock Grid.Row="6" Grid.Column="1" x:Name="txtCreatedDate" Height="30" Padding="5" Margin="0,5" VerticalAlignment="Center"/>

                <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button x:Name="btnUpdate" Content="Update Profile" Margin="0,0,10,0" Padding="10,5" Background="#28a745" Foreground="White" Click="btnUpdate_Click"/>
                    <Button x:Name="btnChangePassword" Content="Change Password" Padding="10,5" Background="#3498db" Foreground="White" Click="btnChangePassword_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page> 