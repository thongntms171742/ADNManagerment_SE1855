<Window x:Class="ADNManagermentWPF.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Password" Height="480" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Change Password" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Form -->
        <StackPanel Grid.Row="1">
            <!-- Current Password -->
            <TextBlock Text="Current Password *" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtCurrentPassword" Margin="0,0,0,15" Padding="8"/>

            <!-- New Password -->
            <TextBlock Text="New Password *" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtNewPassword" Margin="0,0,0,15" Padding="8"/>

            <!-- Confirm New Password -->
            <TextBlock Text="Confirm New Password *" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtConfirmPassword" Margin="0,0,0,15" Padding="8"/>

            <!-- Password Requirements -->
            <Border BorderBrush="#dee2e6" BorderThickness="1" Background="#f8f9fa" Padding="10" Margin="0,0,0,15">
                <TextBlock Text="Password Requirements:&#x0a;• Minimum 6 characters&#x0a;• Should not be empty" 
                           FontSize="11" Foreground="#6c757d" TextWrapping="Wrap"/>
            </Border>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="btnSave" Content="Save" Width="80" Height="35" Margin="0,0,10,0" 
                    Background="#28a745" Foreground="White" Click="btnSave_Click"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="80" Height="35" 
                    Background="#6c757d" Foreground="White" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window> 