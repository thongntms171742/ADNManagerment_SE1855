<Window x:Class="ADNManagermentWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADNManagermentWPF"
        mc:Ignorable="d"
        Title="ADN Management System" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Background="#3498db" Orientation="Horizontal" Margin="0,0,0,5">
            <Label Content="ADN MANAGEMENT SYSTEM" Foreground="White" FontSize="16" FontWeight="Bold" Margin="10,10,0,10" VerticalAlignment="Center"/>
            <Label x:Name="lblWelcome" Content="Welcome" Foreground="White" FontSize="14" Margin="20,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Menu -->
            <Border Grid.Column="0" Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="0,0,1,0">
                <StackPanel>
                    <Button x:Name="btnHome" Content="Home" Height="40" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Padding="20,0,0,0" Click="btnHome_Click"/>
                    <Button x:Name="btnBooking" Content="Booking" Height="40" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Padding="20,0,0,0" Click="btnBooking_Click"/>
                    <Button x:Name="btnResults" Content="Test Results" Height="40" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Padding="20,0,0,0" Click="btnResults_Click"/>
                    <Button x:Name="btnProfile" Content="My Profile" Height="40" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Padding="20,0,0,0" Click="btnProfile_Click"/>
                    
                    <!-- Admin Only Menu Items -->
                    <Button x:Name="btnUserManagement" Content="User Management" Height="40" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Padding="20,0,0,0" Click="btnUserManagement_Click"/>
                    
                    <!-- Service Management for Staff/Manager/Admin -->
                    <Button x:Name="btnServiceManagement" Content="Service Management" Height="40" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Padding="20,0,0,0" Click="btnServiceManagement_Click"/>

                    <!-- Result Management for Staff/Manager/Admin -->
                    <Button x:Name="btnResultManagement" Content="Result Management" Height="40" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Padding="20,0,0,0" Click="btnResultManagement_Click"/>
                    
                    <!-- Dashboard for Manager/Admin -->
                    <Button x:Name="btnDashboard" Content="Dashboard" Height="40" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Padding="20,0,0,0" Click="btnDashboard_Click"/>
                    
                    <Button x:Name="btnLogout" Content="Logout" Height="40" Background="#dc3545" Foreground="White" Margin="10,20,10,0" Click="btnLogout_Click"/>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <Frame Grid.Column="1" x:Name="mainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window> 