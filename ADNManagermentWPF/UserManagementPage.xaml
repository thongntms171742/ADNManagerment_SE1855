<Page x:Class="ADNManagermentWPF.UserManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ADNManagermentWPF"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="800"
      Title="UserManagementPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="15">
            <!-- Header -->
            <TextBlock Text="User Management" FontSize="22" FontWeight="Bold" Margin="0,0,0,15"/>

            <!-- Search and Filter -->
            <Border BorderBrush="#dee2e6" BorderThickness="1" Background="White" Margin="0,0,0,15" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Search Row -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Search by Name:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox Grid.Column="1" x:Name="txtSearchName" Height="30" Padding="5"/>
                        <Button Grid.Column="2" x:Name="btnSearch" Content="Search" Margin="10,0,0,0" Padding="10,5" Background="#3498db" Foreground="White" Click="btnSearch_Click"/>
                        <Button Grid.Column="3" x:Name="btnViewAll" Content="View All Users" HorizontalAlignment="Right" Padding="10,5" Background="#6c757d" Foreground="White" Click="btnViewAll_Click"/>
                    </Grid>
                    
                    <!-- Filter Row -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Filter by Role:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox Grid.Column="1" x:Name="cboRoleFilter" Height="30" Padding="5" SelectionChanged="cboRoleFilter_SelectionChanged">
                            <ComboBoxItem Content="All Users" IsSelected="True"/>
                            <ComboBoxItem Content="Customers Only"/>
                            <ComboBoxItem Content="Staff Only"/>
                            <ComboBoxItem Content="Managers Only"/>
                        </ComboBox>
                        <TextBlock Grid.Column="2" Text="(Admin users are hidden)" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#6c757d" FontSize="11"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- CRUD Buttons -->
            <Border BorderBrush="#dee2e6" BorderThickness="1" Background="White" Margin="0,0,0,15" Padding="15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnAddUser" Content="Add User" Margin="0,0,10,0" Padding="10,5" Background="#28a745" Foreground="White" Click="btnAddUser_Click"/>
                    <Button x:Name="btnEditUser" Content="Edit User" Margin="0,0,10,0" Padding="10,5" Background="#ffc107" Foreground="Black" Click="btnEditUser_Click"/>
                    <Button x:Name="btnDeleteUser" Content="Delete User" Padding="10,5" Background="#dc3545" Foreground="White" Click="btnDeleteUser_Click"/>
                </StackPanel>
            </Border>

            <!-- Users List -->
            <Border BorderBrush="#dee2e6" BorderThickness="1" Background="White" Padding="15" MinHeight="400">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="All Users" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <DataGrid Grid.Row="1" x:Name="dgUsers" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,10" BorderThickness="1" BorderBrush="#dee2e6" MinHeight="300">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding UserId}" Width="50"/>
                            <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="150"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                            <DataGridTextColumn Header="Phone" Binding="{Binding PhoneNumber}" Width="120"/>
                            <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="100"/>
                            <DataGridTextColumn Header="Created Date" Binding="{Binding CreatedDate, StringFormat=\{0:dd/MM/yyyy\}}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page> 