<Window x:Class="ADNManagermentWPF.FeedbackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Send Feedback" Height="520" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Send Feedback" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"
                   Foreground="#2c3e50"/>

        <!-- Booking Info -->
        <Border Grid.Row="1" 
                Background="#f8f9fa" 
                BorderBrush="#dee2e6" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="15" 
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Booking Information" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,10"
                           Foreground="#2c3e50"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Booking ID:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtBookingId" Text="" Margin="0,0,0,5"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Service:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtService" Text="" Margin="0,0,0,5"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Result Date:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtResultDate" Text="" Margin="0,0,0,5"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Rating -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="Rating:" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,10"
                       Foreground="#2c3e50"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <RadioButton x:Name="rb1" Content="1" GroupName="Rating" Margin="5,0"/>
                <RadioButton x:Name="rb2" Content="2" GroupName="Rating" Margin="5,0"/>
                <RadioButton x:Name="rb3" Content="3" GroupName="Rating" Margin="5,0"/>
                <RadioButton x:Name="rb4" Content="4" GroupName="Rating" Margin="5,0"/>
                <RadioButton x:Name="rb5" Content="5" GroupName="Rating" Margin="5,0" IsChecked="True"/>
            </StackPanel>
        </StackPanel>

        <!-- Comment -->
        <StackPanel Grid.Row="3">
            <TextBlock Text="Comment:" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,10"
                       Foreground="#2c3e50"/>
            <TextBox x:Name="txtComment" 
                     Height="100" 
                     TextWrapping="Wrap" 
                     AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto"
                     FontSize="12"
                     BorderBrush="#dee2e6"
                     BorderThickness="1"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button x:Name="btnCancel" 
                    Content="Cancel" 
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Background="#6c757d"
                    Foreground="White"
                    BorderThickness="0"
                    Click="btnCancel_Click"/>
            <Button x:Name="btnSubmit" 
                    Content="Submit Feedback" 
                    Width="120" 
                    Height="30"
                    Background="#28a745"
                    Foreground="White"
                    BorderThickness="0"
                    Click="btnSubmit_Click"/>
        </StackPanel>
    </Grid>
</Window> 